{
	"manifest_version": 3,
	"name": "hackerNewsCommentShuffle",
	"description": "Shake up the comment tree",
	"version": "1.0.1",
	"icons": {
		"48": "icons/hncs2-48.png",
		"64": "icons/hncs2-64.png",
		"96": "icons/hncs2-96.png"
	},

	"browser_specific_settings": {
	    "gecko": {
    		"id": "hncs2@addon.com",
    		"strict_min_version": "42.0"
  		}
	},

	"action": {
		"default_icon": {
			"48": "icons/hncs2-48.png",
			"64": "icons/hncs2-64.png",
			"96": "icons/hncs2-96.png"
		},
		"default_title": "hackerNewsCommentShuffle"
	},

	"background": {
		"scripts": [
			"background.js"
		]
	},

	"permissions": [
		"activeTab",
		"scripting",
		"storage"
	]
}